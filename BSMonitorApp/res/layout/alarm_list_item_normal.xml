<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="121dp"
    android:background="@drawable/shape_empty"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/BS_Alarm_Normal_Green">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="24dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_label_alarm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="告警标题"
                android:textAppearance="@style/PrimaryText_Black_87"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/tv_label_alarm_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="定位地点"
                android:textAppearance="@style/SecondText_Black_54"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前状态:"
                    android:textAppearance="@style/SecondText_Black_54"/>
                <TextView
                    android:id="@+id/tv_label_alarm_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等待派单"
                    android:textAppearance="@style/SecondText_Black_54"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运行时间:"
                    android:textAppearance="@style/SecondText_Black_54"/>
                <TextView
                    android:id="@+id/label_alarm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30分钟"
                    android:textAppearance="@style/SecondText_Black_54"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/BS_Alarm_Normal_Green"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_label_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="更多信息"
                android:textSize="12sp"
                android:textAppearance="@style/SpecialText_Sea_Green"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>